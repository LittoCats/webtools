{
  "compilerOptions": {
    "lib": ["es2015", "dom"],
    "target": "es6",
    "typeRoots": ["node_modules/@types"],
    "module": "es6",
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "declaration": false,
    "jsx": "react",
    "jsxImportSource": "preact",
    "inlineSourceMap": true
  },
  "compileOnSave": true,
  "exclude": ["node_modules"]
}
